{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/watchdog-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Dashboard": {
    "Enabled": true,
    "Port": 5080,
    "UseHttps": true,
    "RequireAuthentication": false,
    "Title": "Emistr System Monitor",
    "UpdateIntervalSeconds": 5
  },
  "Watchdog": {
    "CheckIntervalSeconds": 30,
    "Services": {
      "MariaDB": {
        "Enabled": false,
        "DisplayName": "MariaDB Database",
        "ConnectionString": "Server=YOUR_DB_SERVER;Port=3306;User=YOUR_USER;Password=YOUR_PASSWORD;Connection Timeout=5;",
        "TimeoutSeconds": 10,
        "CriticalAfterFailures": 3,
        "RestartConfig": {
          "Enabled": false,
          "WindowsServiceName": "MySQL",
          "MaxRestartAttempts": 3,
          "RestartDelaySeconds": 30,
          "RestartOnCritical": true
        }
      },
      "LicenseManager": {
        "Enabled": false,
        "DisplayName": "License Manager API",
        "Url": "https://localhost:7115/healthz",
        "TimeoutSeconds": 10,
        "ExpectedStatusCodes": [ 200 ],
        "IgnoreSslErrors": true,
        "CriticalAfterFailures": 3
      },
      "Apache": {
        "Enabled": false,
        "DisplayName": "Apache Web Server",
        "Url": "http://localhost/health.php",
        "TimeoutSeconds": 10,
        "ExpectedStatusCodes": [ 200 ],
        "CriticalAfterFailures": 3
      },
      "PracantD": {
        "Enabled": false,
        "DisplayName": "PracantD Service",
        "Host": "localhost",
        "Port": 54321,
        "TimeoutSeconds": 5,
        "RawCommand": "01",
        "ExpectedResponse": "OK",
        "CriticalAfterFailures": 3
      },
      "BackgroundService": {
        "Enabled": false,
        "DisplayName": "Background Service",
        "ConnectionString": "Server=YOUR_DB_SERVER;Port=3306;User=YOUR_USER;Password=YOUR_PASSWORD;Connection Timeout=5;",
        "DatabaseName": "your_database",
        "TableName": "system",
        "ColumnName": "bgs_last_run",
        "MaxAgeMinutes": 5,
        "SystemRowId": 1,
        "TimeoutSeconds": 10,
        "CriticalAfterFailures": 3
      },
      "CustomHttpServices": {},
      "CustomMariaDbServices": {},
      "CustomTelnetServices": {},
      "CustomBackgroundServices": {},
      "PingServices": {
        "Gateway": {
          "Enabled": false,
          "DisplayName": "Main Gateway",
          "Host": "192.168.1.1",
          "PingCount": 3,
          "TimeoutSeconds": 5,
          "PacketLossThresholdPercent": 20,
          "HighLatencyThresholdMs": 100,
          "CriticalAfterFailures": 3
        },
        "ExternalDNS": {
          "Enabled": false,
          "DisplayName": "Google DNS",
          "Host": "8.8.8.8",
          "PingCount": 3,
          "TimeoutSeconds": 5,
          "CriticalAfterFailures": 5
        }
      },
      "ScriptServices": {
        "DiskSpaceCheck": {
          "Enabled": false,
          "DisplayName": "Disk Space Check",
          "ScriptPath": "scripts/check-disk-space.ps1",
          "Arguments": "-Threshold 90",
          "Type": "PowerShell",
          "TimeoutSeconds": 30,
          "ExpectedExitCode": 0,
          "WarningExitCodes": [1],
          "CaptureOutput": true,
          "CriticalAfterFailures": 2
        },
        "BackupStatus": {
          "Enabled": false,
          "DisplayName": "Backup Status",
          "ScriptPath": "/opt/scripts/check-backup.sh",
          "Type": "Bash",
          "TimeoutSeconds": 60,
          "ExpectedExitCode": 0,
          "CriticalAfterFailures": 1
        },
        "CustomCheck": {
          "Enabled": false,
          "DisplayName": "Custom Health Check",
          "ScriptPath": "scripts/custom-check.py",
          "Arguments": "--verbose",
          "Type": "Python",
          "TimeoutSeconds": 30,
          "ExpectedExitCode": 0,
          "AdditionalHealthyExitCodes": [0, 100],
          "WarningExitCodes": [1, 2],
          "EnvironmentVariables": {
            "CHECK_MODE": "production",
            "API_KEY": "your-api-key"
          },
          "CriticalAfterFailures": 3
        }
      }
    }
  },
  "Notifications": {
    "Email": {
      "Enabled": false,
      "Provider": "Smtp",
      "SmtpHost": "smtp.example.com",
      "SmtpPort": 587,
      "UseSsl": true,
      "Username": "watchdog@example.com",
      "Password": "CHANGE_ME",
      "ApiKey": "",
      "TenantId": "",
      "ClientId": "",
      "ClientSecret": "",
      "FromAddress": "watchdog@example.com",
      "FromName": "Emistr Watchdog",
      "Recipients": [
        "admin@example.com"
      ],
      "CooldownMinutes": 15,
      "CriticalOnly": false
    },
    "Teams": {
      "Enabled": false,
      "WebhookUrl": "https://outlook.office.com/webhook/YOUR_WEBHOOK_ID",
      "CooldownMinutes": 15,
      "CriticalOnly": false
    },
    "Slack": {
      "Enabled": false,
      "WebhookUrl": "https://hooks.slack.com/services/YOUR_WEBHOOK_URL",
      "Channel": "#alerts",
      "Username": "Emistr Watchdog",
      "CooldownMinutes": 15,
      "CriticalOnly": false
    },
    "Discord": {
      "Enabled": false,
      "WebhookUrl": "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_TOKEN",
      "Username": "Emistr Watchdog",
      "CooldownMinutes": 15,
      "CriticalOnly": false
    },
    "GenericWebhook": {
      "Enabled": false,
      "Url": "https://your-server.com/api/alerts",
      "Method": "POST",
      "Headers": {
        "Authorization": "Bearer YOUR_TOKEN",
        "X-Custom-Header": "value"
      },
      "CooldownMinutes": 15,
      "CriticalOnly": false
    },
    "CriticalEvents": {
      "EnableSound": false,
      "EnableDesktopNotification": true,
      "LogToEventLog": false
    }
  },
  "MaintenanceWindows": {
    "Enabled": false,
    "Windows": [
      {
        "Name": "Noční údržba",
        "Enabled": true,
        "StartTime": "02:00",
        "EndTime": "04:00",
        "DaysOfWeek": [],
        "SuppressedServices": []
      },
      {
        "Name": "Víkendová údržba",
        "Enabled": false,
        "StartTime": "22:00",
        "EndTime": "06:00",
        "DaysOfWeek": ["Saturday", "Sunday"],
        "SuppressedServices": ["MariaDB"]
      }
    ]
  },
  "Escalation": {
    "Enabled": false,
    "ResetOnRecovery": true,
    "NotifyAllPreviousLevels": false,
    "Levels": [
      {
        "Level": 1,
        "Name": "L1 - Operations",
        "DelayMinutes": 0,
        "EmailRecipients": ["ops@example.com"],
        "MessagePrefix": "[L1]"
      },
      {
        "Level": 2,
        "Name": "L2 - Senior Ops",
        "DelayMinutes": 15,
        "EmailRecipients": ["senior-ops@example.com", "ops@example.com"],
        "MessagePrefix": "[L2 ESCALATION]"
      },
      {
        "Level": 3,
        "Name": "L3 - Management",
        "DelayMinutes": 60,
        "EmailRecipients": ["management@example.com", "senior-ops@example.com"],
        "SendSms": true,
        "SmsRecipients": ["+420123456789"],
        "MessagePrefix": "[L3 CRITICAL]"
      }
    ]
  },
  "Recovery": {
    "Enabled": false,
    "GlobalCooldownSeconds": 300,
    "MaxAttemptsPerHour": 10,
    "DefaultAction": {
      "Type": "NotifyOnly",
      "Name": "Default Notification"
    },
    "Services": {
      "MariaDB": {
        "Enabled": true,
        "FailuresBeforeRecovery": 3,
        "CooldownSeconds": 300,
        "MaxAttempts": 3,
        "NotifyOnAttempt": true,
        "NotifyOnSuccess": true,
        "Actions": [
          {
            "Type": "RestartService",
            "Name": "Restart MySQL Service",
            "ServiceName": "MySQL",
            "TimeoutSeconds": 60
          }
        ]
      },
      "Apache": {
        "Enabled": true,
        "FailuresBeforeRecovery": 2,
        "Actions": [
          {
            "Type": "ExecuteScript",
            "Name": "Restart Apache",
            "ScriptPath": "scripts/restart-apache.ps1",
            "TimeoutSeconds": 30
          }
        ]
      },
      "CustomApp": {
        "Enabled": true,
        "FailuresBeforeRecovery": 3,
        "Actions": [
          {
            "Type": "HttpRequest",
            "Name": "Call Restart API",
            "HttpUrl": "https://localhost:5000/api/restart",
            "HttpMethod": "POST",
            "HttpHeaders": {
              "Authorization": "Bearer YOUR_TOKEN"
            },
            "TimeoutSeconds": 30
          },
          {
            "Type": "ExecuteCommand",
            "Name": "Fallback Restart",
            "Command": "systemctl",
            "CommandArguments": "restart custom-app",
            "DelayBeforeSeconds": 10,
            "ContinueOnFailure": false
          }
        ]
      }
    }
  }
}
